    </header>
    <!-- End Header -->

    <!-- Start Breadcrumb 
    ============================================= -->
    <div class="breadcrumb-area shadow dark text-center bg-fixed text-light" style="background-image: url('http://localhost:5043/@Model.Curso.ImagemUrl.Replace("\\", "/")');">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Bem-Vindo a nossa Biblioteca</h1>
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                        <li><a href="#">Detalhes do Curso</a></li>
                        <li class="active">Comprar Livro</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Start Venda Livro 
    ============================================= -->
    <section class="checkout-area default-padding">
        <div class="container">
            <div class="row">
                <!-- Formulário de 3 etapas -->
                <div class="col-lg-7">
                    <form id="checkout-form" asp-action="ComprarCurso" method="post">
                        <input type="hidden" asp-for="IdCursoFK" />
                        <input type="hidden" asp-for="Fatura" value="@fatura_save" />
                        
                        <!-- Etapa 1: Dados Pessoais -->
                        <div class="checkout-step" id="step-1">
                            <h4 class="mb-3">1. Dados Pessoais</h4>
                            <div class="form-group">
                                <input asp-for="NomeCliente" class="form-control" placeholder="Nome Completo" required>
                                <span asp-validation-for="NomeCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="EmailCliente" type="email" class="form-control" placeholder="Email" required>
                                <span asp-validation-for="EmailCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="TelefoneCliente" type="tel" class="form-control" placeholder="Número de Telefone" required>
                                <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
                            </div>
                            <button type="button" class="btn btn-dark next-step">Próximo</button>
                        </div>

                       <!-- Etapa 2: Pagamento -->
                        <div class="checkout-step d-none" id="step-2">
                            <h4 class="mb-3">2. Forma de Pagamento</h4>
                            <div class="form-group">
                                @if (Model.Curso.Tag == "Gratuito")
                                {
                                    <select id="tipoPagamento" name="TipoPagamento" class="form-control" required hidden>
                                        <option value="Gratuito" selected>Gratuito</option>
                                    </select>

                                    <div class="alert alert-success mb-3" role="alert">
                                        <p class="mb-0">
                                            🎉 <strong>Parabéns!</strong> Este curso é <span class="badge bg-success">Gratuito</span>.  
                                            Aproveite esta oportunidade e desfrute!
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <select id="tipoPagamento" name="TipoPagamento" class="form-control" required>
                                        <option disabled selected value="">Escolha uma opção</option>
                                        <option value="Transferência Bancária">Transferência Bancária</option>
                                        <option value="Multicaixa Express" disabled>Multicaixa Express</option>
                                        <option value="Referência" disabled>Referência</option>
                                    </select>
                                    <span class="text-danger" id="erroPagamento"></span>
                                }
                            </div>
                            <button type="button" class="btn btn-gray prev-step">Voltar</button>
                            <button type="button" class="btn btn-dark next-step">Próximo</button>
                        </div>


                       <!-- Etapa 3: Fatura -->
                        <div class="checkout-step d-none" id="step-3">
                            <h4 class="mb-3">3. Confirmação</h4>
                             @if (Model.Curso.Tag == "Gratuito")
                             {

                                <input type="hidden" asp-for="Status" value="Aprovada" />

                                <div class="alert alert-success">
                                    <p>
                                        🎉 <strong>Parabéns!</strong><br>
                                        Este livro é <span class="badge bg-success">Gratuito</span>, por isso não é necessário realizar nenhum pagamento.
                                    </p>
                                    <p>
                                        Para receber o material, basta <strong>enviar uma solicitação</strong> para o nosso e-mail: 
                                        <strong>ekitivala.compras@gmail.com</strong> <br>
                                        ou contactar via WhatsApp pelo número: <strong>923 923 923</strong>.
                                    </p>
                                    <p>
                                        A nossa equipa fará a disponibilização do livro no prazo máximo de <strong>24 horas</strong>.
                                    </p>
                                </div>

                            }
                            else{
                                
                                <div class="alert alert-info">
                                    <p>
                                        <strong>Importante:</strong><br>
                                        Após realizar o pagamento, envie o comprovativo para o nosso e-mail: <strong>ekitivala.compras@gmail.com</strong><br>
                                        Ou entre em contacto via WhatsApp pelo número: <strong>923 923 923</strong>.
                                    </p>
                                    <p>
                                        Após a confirmação do pagamento, a nossa equipa entrará em contacto consigo para disponibilizar o material no prazo máximo de <strong>24 horas</strong>.
                                    </p>
                                </div>
                            }

                                <button type="button" class="btn btn-gray prev-step">Voltar</button>
                                <button type="submit" class="btn btn-success">Finalizar Compra</button>
                            </div>
                            


                    </form>
                </div>

                <!-- Card do Livro -->
                <div class="col-lg-5">
                    <div class="card shadow p-3 rounded">
                        <div class="thumb bg-cover mb-3" style="height: 200px; background-image: url('http://localhost:5043/@Model.Curso.ImagemUrl.Replace("\\", "/")');"></div>
                        <h5>@Model.Curso.Nome</h5>
                        <p><strong>Categoria:</strong> @Model.Curso.Tag</p>
                        <p><strong>Preço:</strong> @Model.Curso.Preco.ToString("N0") KZ</p>
                        <p><strong>Estudantes:</strong> @Model.Curso.Curtidas</p>
                        <p><strong>Descrição:</strong> @Model.Curso.Descricao</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- End Biblioteca -->

<script>
    const steps = document.querySelectorAll('.checkout-step');
    let currentStep = 0;

    function showStep(index) {
        steps.forEach((step, i) => {
            step.classList.toggle('d-none', i !== index);
        });
    }

    document.querySelectorAll('.next-step').forEach(btn => {
        btn.addEventListener('click', (e) => {
            // Se estiver na etapa 2 (índice 1), aplicar a lógica especial do pagamento
            if (currentStep === 1) {
                const tipoPagamento = document.getElementById("tipoPagamento").value;
                const erroPagamento = document.getElementById("erroPagamento");

                if (!tipoPagamento) {
                    erroPagamento.textContent = "Selecione uma forma de pagamento.";
                    return;
                }

                const fatura = document.querySelector('[name="Fatura"]').value;
                const nome = document.querySelector('[name="NomeCliente"]').value;
                const email = document.querySelector('[name="EmailCliente"]').value;
                const telefone = document.querySelector('[name="TelefoneCliente"]').value;
                const cursoId = document.querySelector('[name="IdCursoFK"]').value;


                 console.log('Valores obtidos:', { fatura, nome, email, telefone, cursoId });

              
                let url = "";
                switch (tipoPagamento) {
                    case "Multicaixa Express":
                            const url_express = `/Estudante/PagarExpress?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&cursoId=${encodeURIComponent(cursoId)}`;
                            url = url_express; 
                        break;
                    case "Transferência Bancária":
                            const url_trans = `/Estudante/PagarTransferencia?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&cursoId=${encodeURIComponent(cursoId)}`;
                            url = url_trans; 
                        break;
                    case "Referência": 
                            const url_ref = `/Estudante/PagarReferencia?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&cursoId=${encodeURIComponent(cursoId)}`;
                            url = url_ref; 
                        break;
                    case "Gratuito": 
                            const url_gratis = `/Estudante/CursoGratuito?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&cursoId=${encodeURIComponent(cursoId)}`;
                            url = url_gratis; 
                        break;
                    default:
                        erroPagamento.textContent = "Forma de pagamento inválida.";
                        return;
                }

                // Abrir página de fatura na nova aba
                window.open(url, "_blank");
            }

            // Avança para o próximo passo
            if (currentStep < steps.length - 1) {
                currentStep++;
                showStep(currentStep);
            }
        });
    });

    document.querySelectorAll('.prev-step').forEach(btn => {
        btn.addEventListener('click', () => {
            if (currentStep > 0) {
                currentStep--;
                showStep(currentStep);
            }
        });
    });

    // Mostrar a etapa inicial
    showStep(currentStep);
</script>


