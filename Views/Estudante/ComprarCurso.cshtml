@model VendaCursoModel

@{
    ViewData["Title"] = "Detalhes do Curso";
    Layout = "_LayoutBase";

    // Gerar código de fatura antes de salvar
        Random rnd = new Random();
        string numeros1 = rnd.Next(0, 100).ToString("D2");
        string letras = new string(Enumerable.Range(0, 2)
                                            .Select(_ => (char)rnd.Next('A', 'Z' + 1))
                                            .ToArray());
        string numeros2 = rnd.Next(0, 1000).ToString("D3");
        string fatura_save = $"EKU{numeros1}{letras}{numeros2}";
}
<style>
