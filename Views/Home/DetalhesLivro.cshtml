@model LivroModel

@{
    ViewData["Title"] = "Detalhes do Livro";
    Layout = "_LayoutBase";
}
<style>
    .sidebar-info ul li a {
        display: block;
        padding: 8px 12px;
        color: #333;
        text-decoration: none;
        transition: all 0.3s ease;
        border-radius: 4px;
    }

    .sidebar-info ul li a:hover {
        background-color: #002147;
        color: var(--white);
    }

    .meta ul li {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        display: block !important;
    }

</style>

    <!-- Header 
    ============================================= -->
    <header>
