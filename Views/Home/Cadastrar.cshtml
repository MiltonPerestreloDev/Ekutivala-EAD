    <div class="login-area default-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form asp-action="Cadastrar" asp-controller="Home" method="post" class="white-popup-block">
                        <div class="row">
                            <div class="col-lg-4 login-social">
                                <div class="info-box">
                                    <img src="~/assets/img/advisor/cadastrar.svg">
                                </div>
                            </div>

                            <!-- Formulário -->
                            <div class="col-lg-8 login-custom">
                                <h4>Crie uma nova conta de Estudante</h4>

                                <!-- Nome -->
                                <div class="form-group">
                                    <input name="Nome" asp-for="Nome" class="form-control" placeholder="Nome completo*" type="text" required>
                                </div>

                                <!-- E-mail -->
                                <div class="form-group">
                                    <input name="Email" asp-for="Email" class="form-control" placeholder="E-mail*" type="email" required>
                                </div>

                                <!-- Data de Nascimento -->
                                <div class="form-group">
                                    <input name="DataNascimento" asp-for="DataNascimento" class="form-control" placeholder="Data de Nascimento*" type="date"  required/>
                                </div>

                                <!-- Senha -->
                                <div class="form-group">
                                    <input name="Senha" id="Senha" asp-for="Senha" class="form-control" placeholder="Senha*" type="password" required minlength="5">
                                </div>

                                <!-- Confirmar Senha -->
                                <div class="form-group">
                                    <input name="ConfirmarSenha" id="ConfirmarSenha" class="form-control" placeholder="Confirme a senha*" type="password" required>
                                    <small id="senhaError" class="text-danger" style="display:none;">As senhas não coincidem!</small>
                                </div>


                                <!-- Políticas -->
                                <div class="form-group d-flex align-items-center">
                                    <input type="checkbox" id="acceptPolicies" name="AceitaPoliticas" required style="margin-right: 10px;">
                                    <label for="acceptPolicies" class="m-0">
                                        Eu li e aceito as 
                                        <a asp-area="" asp-controller="Home" asp-action="Politicas" target="_blank">Políticas de Privacidade</a> & 
                                        <a asp-area="" asp-controller="Home" asp-action="Termo" target="_blank">Termos de Uso</a>.
                                    </label>
                                </div>

                                <!-- Botão -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary w-100">Cadastrar-se</button>
                                </div>

                                <p class="link-bottom text-center">
                                    Já tem uma conta? 
                                    <a asp-area="" asp-controller="Home" asp-action="Login">Faça login agora</a>
                                </p>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
    <!-- End Cadastrar -->
    @section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const senhaInput = document.getElementById('Senha');
                const confirmarSenhaInput = document.getElementById('ConfirmarSenha');
                const senhaError = document.getElementById('senhaError');

                function validarSenhas() {
                    if (senhaInput.value !== confirmarSenhaInput.value) {
                        senhaError.style.display = 'block';
                        confirmarSenhaInput.setCustomValidity("As senhas não coincidem");
                    } else {
                        senhaError.style.display = 'none';
                        confirmarSenhaInput.setCustomValidity("");
                    }
                }

                // Validar quando o usuário digitar em qualquer um dos campos
                senhaInput.addEventListener('input', validarSenhas);
                confirmarSenhaInput.addEventListener('input', validarSenhas);
                
                // Validar também quando o formulário for enviado
                document.querySelector('form').addEventListener('submit', function(e) {
                    validarSenhas();
                    if (senhaInput.value !== confirmarSenhaInput.value) {
                        e.preventDefault(); // Impede o envio do formulário se as senhas não forem iguais
                    }
                });
            });
        </script>
    }