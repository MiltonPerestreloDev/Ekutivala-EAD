    <!-- Start Breadcrumb 
    ============================================= -->
    <div class="breadcrumb-area shadow dark text-center bg-fixed text-light" style="background-image: url(../assets/img/banner/13.png);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Todos os Cursos</h1>
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                        <li><a href="#">Página</a></li>
                        <li class="active">Cursos</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Start Popular Courses 
    ============================================= -->
    <div class="blog-area full-blog left-sidebar full-blog default-padding">
        <div class="container">
            <div class="row">
    <div class="blog-items">
        <div class="blog-content col-lg-8">
            <div class="popular-courses-items bottom-price">
                <div class="row">
                    <!-- Loop através dos cursos -->
                    @foreach (var curso in Model.Cursos)
                    {
                        <div class="col-md-6 equal-height">
                            <div class="item item_curso">
                                <div class="thumb">
                                    <a asp-area="" asp-controller="Home" asp-action="Login">
                                        <img src="@curso.ImagemUrl" alt="@curso.Nome">
                                    </a>
                                    <div class="overlay">
                                        <a class="btn btn-theme effect btn-sm" asp-area="" asp-controller="Home" asp-action="Login" >
                                            <i class="fas fa-chart-bar"></i> Ver Detalhes
                                        </a>
                                    </div>
                                </div>
                                <div class="info">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Login">@curso.Nome</a></h4>
                                    <div class="cats">
                                        <span class="badge bg-primary">@curso.Tag</span>
                                        <span class="badge bg-secondary">@curso.QuantidadeProfessores professores</span>
                                    </div>

                                    <p>@curso.Descricao</p>
                                    
                                    <div class="course-meta">
                                        <span><i class="fas fa-calendar"></i> @curso.DataPublicacao.ToString("dd/MM/yyyy")</span>
                                        <span><i class="fas fa-user"></i> @curso.Curtidas +</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (Model.Cursos.Count == 0)
                    {
                        <div class="col-12">
                            <div class="alert alert-info">
                                Nenhum curso encontrado com os filtros aplicados.
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPaginas > 1)
            {
                <div class="row">
                    <div class="col-lg-12 pagi-area">
                        <nav aria-label="navigation">
                            <ul class="pagination">
                                <li class="page-item @(Model.PaginaAtual == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Cursos" 
                                       asp-route-termoPesquisa="@Model.TermoPesquisa"
                                       asp-route-tagFiltro="@Model.TagSelecionada"
                                       asp-route-pagina="@(Model.PaginaAtual - 1)">Anterior</a>
                                </li>
                                
                                @for (int i = 1; i <= Model.TotalPaginas; i++)
                                {
                                    <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                                        <a class="page-link" asp-action="Cursos" 
                                           asp-route-termoPesquisa="@Model.TermoPesquisa"
                                           asp-route-tagFiltro="@Model.TagSelecionada"
                                           asp-route-pagina="@i">@i</a>
                                    </li>
                                }
                                
                                <li class="page-item @(Model.PaginaAtual == Model.TotalPaginas ? "disabled" : "")">
                                    <a class="page-link" asp-action="Cursos" 
                                       asp-route-termoPesquisa="@Model.TermoPesquisa"
                                       asp-route-tagFiltro="@Model.TagSelecionada"
                                       asp-route-pagina="@(Model.PaginaAtual + 1)">Próxima</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
        
        <!-- Start Sidebar -->
        <div class="sidebar col-lg-4">
            <aside>
                <!-- Start Sidebar Item -->
                <div class="sidebar-item search">
                    <div class="title">
                        <h4>Pesquisar Cursos</h4>
                    </div>
                    <div class="sidebar-info">
                        <form method="get" asp-action="Cursos">
                            <input type="text" name="termoPesquisa" class="form-control" value="@Model.TermoPesquisa" placeholder="Digite para pesquisar...">
                            <input type="hidden" name="tagFiltro" value="@Model.TagSelecionada">
                            <input type="submit" value="Pesquisar">
                        </form>
                    </div>
                </div>
                <!-- End Sidebar Item -->

                <!-- Start Sidebar Item -->
                <div class="sidebar-item tags">
                    <div class="title">
                        <h4>Categorias Populares</h4>
                    </div>
                    <div class="sidebar-info">
                        <ul>
                            <li><a asp-action="Cursos" 
                                  asp-route-termoPesquisa="@Model.TermoPesquisa"
                                  asp-route-tagFiltro=""
                                  class="@(string.IsNullOrEmpty(Model.TagSelecionada) ? "active" : "")">Todas</a></li>
                                    @foreach (var tag in Model.TagsPopulares)
                                    {
                                        <li>
                                            <a asp-action="Cursos" 
                                            asp-route-termoPesquisa="@Model.TermoPesquisa"
                                            asp-route-tagFiltro="@tag"
                                            class="@(tag == Model.TagSelecionada ? "active" : "")">@tag</a>
                                        </li>
                                    }
                        </ul>
                    </div>
                </div>
                <!-- End Sidebar Item -->

                <!-- Start Sidebar Item -->
                <div class="sidebar-item">
                    <div class="title">
                        <h4>Estatísticas</h4>
                    </div>
                    <div class="sidebar-info">
                        <div class="stats">
                            <p><strong>Total de Cursos:</strong> @Model.TotalCursos</p>
                            <p><strong>Página:</strong> @Model.PaginaAtual de @Model.TotalPaginas</p>
                        </div>
                    </div>
                </div>
                <!-- End Sidebar Item -->
            </aside>
        </div>
        <!-- End Start Sidebar -->
    </div>
</div>
        </div>
    </div>
    <!-- End Popular Courses -->