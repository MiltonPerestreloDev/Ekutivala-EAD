@model ListaCursosViewModel

@{
    ViewData["Title"] = "Cursos";
    Layout = "_LayoutBase";
}
<style>
    .sidebar-info ul li a {
        display: block;
        padding: 8px 12px;
        color: #333;
        text-decoration: none;
        transition: all 0.3s ease;
        border-radius: 4px;
    }

    .sidebar-info ul li a:hover {
        background-color: #326eb2;
        color: var(--white);
    }

    .equal-height {
        display: flex;
    }
    .item_curso {
        margin-bottom: 30px;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }
    .item_curso:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .thumb img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .info {
        padding: 15px;
    }
    .course-meta {
        margin-top: 10px;
        font-size: 12px;
        color: #666;
    }
    .course-meta span {
        margin-right: 10px;
    }
    .badge {
        margin-right: 5px;
    }

</style>
