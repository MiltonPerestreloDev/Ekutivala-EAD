<script>
    const steps = document.querySelectorAll('.checkout-step');
    let currentStep = 0;

    function showStep(index) {
        steps.forEach((step, i) => {
            step.classList.toggle('d-none', i !== index);
        });
    }

    document.querySelectorAll('.next-step').forEach(btn => {
        btn.addEventListener('click', (e) => {
            // Se estiver na etapa 2 (índice 1), aplicar a lógica especial do pagamento
            if (currentStep === 1) {
                const tipoPagamento = document.getElementById("tipoPagamento").value;
                const erroPagamento = document.getElementById("erroPagamento");

                if (!tipoPagamento) {
                    erroPagamento.textContent = "Selecione uma forma de pagamento.";
                    return;
                }

                const fatura = document.querySelector('[name="Fatura"]').value;
                const nome = document.querySelector('[name="NomeCliente"]').value;
                const email = document.querySelector('[name="EmailCliente"]').value;
                const telefone = document.querySelector('[name="TelefoneCliente"]').value;
                const livroId = document.querySelector('[name="IdLivroFK"]').value;


                 console.log('Valores obtidos:', { fatura, nome, email, telefone, livroId });

              
                let url = "";
                switch (tipoPagamento) {
                    case "Multicaixa Express":
                            const url_express = `/Home/PagarExpress?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&livroId=${encodeURIComponent(livroId)}`;
                            url = url_express; 
                        break;
                    case "Transferência Bancária":
                            const url_trans = `/Home/PagarTransferencia?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&livroId=${encodeURIComponent(livroId)}`;
                            url = url_trans; 
                        break;
                    case "Referência": 
                            const url_ref = `/Home/PagarReferencia?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&livroId=${encodeURIComponent(livroId)}`;
                            url = url_ref; 
                        break;
                    case "Gratuito": 
                            const url_gratis = `/Home/LivroGratuito?fatura=${encodeURIComponent(fatura)}&nome=${encodeURIComponent(nome)}&email=${encodeURIComponent(email)}&telefone=${encodeURIComponent(telefone)}&livroId=${encodeURIComponent(livroId)}`;
                            url = url_gratis; 
                        break;
                    default:
                        erroPagamento.textContent = "Forma de pagamento inválida.";
                        return;
                }

                // Abrir página de fatura na nova aba
                window.open(url, "_blank");
            }

            // Avança para o próximo passo
            if (currentStep < steps.length - 1) {
                currentStep++;
                showStep(currentStep);
            }
        });
    });

    document.querySelectorAll('.prev-step').forEach(btn => {
        btn.addEventListener('click', () => {
            if (currentStep > 0) {
                currentStep--;
                showStep(currentStep);
            }
        });
    });

    // Mostrar a etapa inicial
    showStep(currentStep);
</script>


