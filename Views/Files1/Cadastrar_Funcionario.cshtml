@model FuncionarioModel
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Ekutivala";
    ViewContext.RouteData.Values["action"] = "Index";
    Layout = "_Dashboard_Layout";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Cadastrar Novo Funcionário</h1>
        
        <!-- Mensagens de sucesso/erro -->
        @if (ViewBag.MensagemSucesso != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @ViewBag.MensagemSucesso
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (ViewBag.MensagemErro != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @ViewBag.MensagemErro
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-user-tie me-1"></i>
                Informações do Funcionário
            </div>
            <div class="card-body">
                <form asp-action="Cadastrar_Funcionario" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Nome -->
                            <div class="form-group mb-3">
                                <label asp-for="NomeFunc" class="form-label">Nome Completo *</label>
                                <input asp-for="NomeFunc" class="form-control" required 
                                       placeholder="Digite o nome completo" />
                                <span asp-validation-for="NomeFunc" class="text-danger"></span>
                            </div>
                            
                            <!-- Email -->
                            <div class="form-group mb-3">
                                <label asp-for="EmailFunc" class="form-label">E-mail *</label>
                                <input asp-for="EmailFunc" type="email" class="form-control" required 
                                       placeholder="exemplo@email.com" />
                                <span asp-validation-for="EmailFunc" class="text-danger"></span>
                            </div>
                            
                            <!-- Senha -->
                            <div class="form-group mb-3">
                                <label asp-for="SenhaFunc" class="form-label">Senha *</label>
                                <input asp-for="SenhaFunc" type="password" class="form-control" required 
                                       placeholder="Mínimo 6 caracteres" minlength="6" />
                                <span asp-validation-for="SenhaFunc" class="text-danger"></span>
                                <div class="form-text">A senha será criptografada automaticamente.</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <!-- Nível de Acesso -->
                            <div class="form-group mb-3">
                                <label asp-for="AcessoFunc" class="form-label">Nível de Acesso *</label>
                                <select asp-for="AcessoFunc" class="form-select" required>
                                    <option value="">Selecione o nível de acesso...</option>
                                    <option value="A">A - Administrador</option>
                                    <option value="B">B - Gestor</option>
                                    <option value="C">C - Padrão</option>
                                </select>
                                <span asp-validation-for="AcessoFunc" class="text-danger"></span>
                                <div class="form-text">
                                    <small>
                                        <strong>A:</strong> Acesso completo | 
                                        <strong>B:</strong> Acesso moderado | 
                                        <strong>C:</strong> Acesso básico
                                    </small>
                                </div>
                            </div>
                            
                            <!-- Status -->
                            <div class="form-group mb-3">
                                <label asp-for="StatusFunc" class="form-label">Status *</label>
                                <select asp-for="StatusFunc" class="form-select" required>
                                    <option value="ATIVO">ATIVO</option>
                                    <option value="INATIVO">INATIVO</option>
                                    <option value="BLOQUEADO">BLOQUEADO</option>
                                </select>
                                <span asp-validation-for="StatusFunc" class="text-danger"></span>
                            </div>

                            <!-- Confirmação de Senha (opcional) -->
                            <div class="form-group mb-3">
                                <label for="ConfirmarSenha" class="form-label">Confirmar Senha *</label>
                                <input type="password" class="form-control" id="ConfirmarSenha" 
                                       placeholder="Digite a senha novamente" required />
                                <span id="senhaError" class="text-danger" style="display: none;">
                                    As senhas não coincidem
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Informações adicionais -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="alert alert-info mb-3" role="alert">
                                <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Informações Importantes</h6>
                                <ul class="mb-0">
                                    <li>Campos marcados com * são obrigatórios</li>
                                    <li>O e-mail deve ser único no sistema</li>
                                    <li>A senha será criptografada</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="ListaFuncionarios" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i> Voltar para Lista
                        </a>
                        <button type="submit" class="btn btn-primary" id="btnSubmit">
                            <i class="fas fa-save me-1"></i> Cadastrar Funcionário
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Validação de confirmação de senha
        document.addEventListener('DOMContentLoaded', function() {
            const senhaInput = document.getElementById('SenhaFunc');
            const confirmarSenhaInput = document.getElementById('ConfirmarSenha');
            const senhaError = document.getElementById('senhaError');
            const form = document.querySelector('form');
            const btnSubmit = document.getElementById('btnSubmit');

            function validarSenhas() {
                if (senhaInput.value !== confirmarSenhaInput.value) {
                    senhaError.style.display = 'block';
                    confirmarSenhaInput.classList.add('is-invalid');
                    return false;
                } else {
                    senhaError.style.display = 'none';
                    confirmarSenhaInput.classList.remove('is-invalid');
                    return true;
                }
            }

            confirmarSenhaInput.addEventListener('input', validarSenhas);
            senhaInput.addEventListener('input', validarSenhas);

            form.addEventListener('submit', function(e) {
                if (!validarSenhas()) {
                    e.preventDefault();
                    // Scroll para o erro
                    senhaError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            });

            // Validação em tempo real dos campos
            const inputs = form.querySelectorAll('input[required], select[required]');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                    }
                });
            });
        });
    </script>

}





