@model EstudanteModel

@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Ekutivala";
    ViewContext.RouteData.Values["action"] = "Index";
    Layout = "_Dashboard_Layout";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Editar Estudante</h1>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-user-edit me-1"></i>
                Atualizar Informações do Estudante
            </div>
            <div class="card-body">
                <form asp-action="Editar_Estudante" method="post">
                    <!-- Campos ocultos -->
                    <input asp-for="IdEstudante" type="hidden" />
                    <input asp-for="Nome" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Telefone" type="hidden" />
                    <input asp-for="Cidade" type="hidden" />
                    <input asp-for="DataNascimento" type="hidden" />
                    <input asp-for="Nacionalidade" type="hidden" />
                    <input asp-for="Pais" type="hidden" />
                    <input asp-for="Provincia" type="hidden" />
                    <input asp-for="NivelAcademico" type="hidden" />
                    <input asp-for="Instituicao" type="hidden" />
                    <input asp-for="DataCadastro" type="hidden" />

                    <div class="row">
                        <!-- Coluna 1: Informações do Estudante (somente leitura) -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Nome Completo</label>
                                <input class="form-control" value="@Model.Nome" readonly />
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">E-mail</label>
                                <input class="form-control" value="@Model.Email" readonly />
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">Telefone</label>
                                <input class="form-control" value="@Model.Telefone" readonly />
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">Cidade</label>
                                <input class="form-control" value="@Model.Cidade" readonly />
                            </div>
                        </div>

                        <!-- Coluna 2: Status (editável) e Informações Adicionais -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="ATIVO">Ativo</option>
                                    <option value="INATIVO">Inativo</option>
                                    <option value="BLOQUEADO">Bloqueado</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <!-- Informações adicionais (somente leitura) -->
                            <div class="card bg-light mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">Informações Adicionais</h6>
                                </div>
                                <div class="card-body">
                                    <small class="d-block mb-1">
                                        <strong>Data de Nascimento:</strong> 
                                        @(Model.DataNascimento?.ToString("dd/MM/yyyy") ?? "Não informada")
                                    </small>
                                    <small class="d-block mb-1">
                                        <strong>Nacionalidade:</strong> 
                                        @(Model.Nacionalidade ?? "Não informada")
                                    </small>
                                    <small class="d-block mb-1">
                                        <strong>País:</strong> 
                                        @(Model.Pais ?? "Não informado")
                                    </small>
                                    <small class="d-block mb-1">
                                        <strong>Província:</strong> 
                                        @(Model.Provincia ?? "Não informada")
                                    </small>
                                    <small class="d-block mb-1">
                                        <strong>Nível Académico:</strong> 
                                        @(Model.NivelAcademico ?? "Não informado")
                                    </small>
                                    <small class="d-block">
                                        <strong>Instituição:</strong> 
                                        @(Model.Instituicao ?? "Não informada")
                                    </small>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">Data de Cadastro</label>
                                <input class="form-control" value="@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Listar_Estudantes" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Atualizar Status
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

