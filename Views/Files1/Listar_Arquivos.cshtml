@model IEnumerable<LivroModel>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Ekutivala";
    ViewContext.RouteData.Values["action"] = "Index";
    Layout = "_Dashboard_Layout";

    
}


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Livros</h1>
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <span>Cadastrar Novo Livro</span>
                        <a class="small text-white stretched-link" asp-controller="Files1" asp-action="UploadCapa">
                            <div class="small text-white"><i class="fas fa-plus-circle"></i></div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-book me-1"></i>
                Catálogo de Livros
            </div>
            <div class="card-body">
                <table id="datatablesSimple" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Capa</th>
                            <th>Título</th>
                            <th>Autor</th>
                            <th>Preço</th>
                            <th>Categoria</th>
                            <th>Status</th>
                            <th>Operações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var LivroModel in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(LivroModel.ImagemCaminho))
                                    {
                                        <img src="http://localhost:5043/@LivroModel.ImagemCaminho" alt="Capa do livro" style="width: 50px; height: auto;" class="img-thumbnail" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-book" style="font-size: 2rem;"></i>
                                    }
                                </td>
                                <td>@LivroModel.Titulo</td>
                                <td>@LivroModel.Autor</td>
                                <td>@LivroModel.Preco Kz</td>
                                <td>@LivroModel.Categoria</td>
                                <td>
                                    <span class="badge @(LivroModel.Status == "ATIVO" ? "bg-success" : "bg-danger")">
                                        @LivroModel.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Files1" asp-action="Editar_Arquivo" asp-route-id="@LivroModel.IdLivro" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a asp-controller="Files1" asp-action="Excluir_Arquivo" asp-route-id="@LivroModel.IdLivro" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja inativar este livro?');">
                                            <i class="fas fa-trash-alt"></i> Remover
                                        </a>
                                       
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<script>
    $(document).ready(function (){
        $('#datatablesSimple').DataTable({
            "language":{
                "emptyTable": "Nenhum registro encontrado",
                "lengthMenu": "_MENU_ resultados sendo mostrados",
                "info": "Mostrando de _START_ até _END_ de _TOTAL_ registrados",
                "infoEmpty": "Mostrando 0 até 0 de 0 registrados",
                "infoFiltered": "(Filtrados de _MAX_ registrados)",
                "infoPostFix": ".",
                "infoThousands": ".",
                "loadingRecords": "Carregando...",
                "processing": "Processando...",
                "zeroRecords": "Nenhum registro encotrado",
                "search": "Pesquisar",
                "paginate": {
                    "next": "Próximo",
                    "previous": "Anterior",
                    "first": "Primeiro",
                    "last": "Último",
                },
                "aria": {
                    "sortAscending": "Ordenar colunar de forma ascendente",
                    "sortDescending": "Ordenar colunar de forma descendente"
                }
            }
        });
    });
</script>